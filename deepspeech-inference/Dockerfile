FROM 10.105.15.44:5000/tensorflow-ds-gcc:15022018154805

###############################################################################
# Copy everything to /
###############################################################################
COPY workload_scripts/* /
RUN chmod 777 /*.sh; \
    chmod 777 /*.py; \
    sync

###############################################################################
# Workload requirements
###############################################################################
RUN mkdir -p /root/deepSpeech/src
COPY src/* /root/deepSpeech/src/
RUN chmod 777 /root/deepSpeech/src/*.sh; \
    chmod 777 /root/deepSpeech/src/*.py; \
    sync

###############################################################################
# Always change to /
###############################################################################
WORKDIR /

###############################################################################
# Make sure that everything is written to disk
###############################################################################
RUN sync

