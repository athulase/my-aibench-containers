FROM 10.105.15.44:5000/tensorflow-gcc:15022018154325

###############################################################################
# Copy everything to /
###############################################################################
COPY workload_scripts/* /
RUN chmod 777 /*.sh; \
    chmod 777 /*.py; \
    sync

###############################################################################
# Facenet Configuration
###############################################################################
ENV FACENET_HOME $FACENET_HOME_DIR
RUN echo 'export PYTHONPATH=$FACENET_HOME/src' >> ~/.bashrc; \
    source ~/.bashrc

###############################################################################
# Always change to /
###############################################################################
WORKDIR /

###############################################################################
# Make sure that everything is written to disk
###############################################################################
RUN sync
