FROM 10.105.15.44:5000/centos-base:15022018154805

###############################################################################
# Others
###############################################################################
COPY workload_scripts/* /
RUN chmod 777 /*.sh; \
    chmod 777 /*.py; \
    sync

###############################################################################
# Always change to /
###############################################################################
WORKDIR /

###############################################################################
# Expose the required ports
###############################################################################
EXPOSE 2380 2379 4001 7001 55555

###############################################################################
# Start container services
###############################################################################
ENTRYPOINT /start.sh && /bin/bash
